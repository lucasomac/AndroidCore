<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RestauranteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="342dp">

        <ImageView
            android:id="@+id/logoRestaurante"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image1" />

        <TextView
            android:id="@+id/tvNomeRestaurante"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="0dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="36sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="7dp"
        android:text="@string/principais_pratos"
        android:textColor="@color/restaurante_pratos"
        android:textSize="36sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcPratos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/tlHome"
        app:spanCount="2"
        tools:listitem="@layout/card_prato" />
</LinearLayout>