<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="346dp"
    android:id="@+id/card"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPrato"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="247dp"
            app:srcCompat="@drawable/image1" />

        <TextView
            android:id="@+id/tvNomeLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="TextView"
            android:textColor="@color/card_nome_local"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tvEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="TextView"
            android:textColor="@color/edit_text_hint_label"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="TextView"
            android:textColor="@color/edit_text_hint_label"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView><!--</androidx.constraintlayout.widget.ConstraintLayout>-->